<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Notifications" >

    <TextView
        android:id="@+id/txtactnamelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Notification"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/imvwnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/next"
        android:onClick="next"
        android:src="@drawable/next" />

    <EditText
        android:id="@+id/txtsubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtactnamelogin"
        android:layout_alignRight="@+id/imvwnext"
        android:layout_below="@+id/txtactnamelogin"
        android:layout_marginTop="28dp"
        android:background="@drawable/txtfd_background"
        android:ems="10"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:textColor="@android:color/black"
        android:hint="Subject" />

    <EditText
        android:id="@+id/txtmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtsubject"
        android:layout_alignRight="@+id/txtsubject"
        android:layout_centerVertical="true"
        android:background="@drawable/txtfd_background"
        android:ems="10"
        android:hint="Message"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:textColor="@android:color/black"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

</RelativeLayout>
